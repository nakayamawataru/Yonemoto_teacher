<%= f.fields_for :owner do |ff| %>
  <div class="form-group">
    <%= ff.label :name, '名前' %>
    <%= ff.text_field :name, class: "form-control" %>
    <%= show_errors ff.object, :name %>
  </div>
  <div class="form-group">
    <%= ff.label :email, 'メールアドレス' %>
    <%= ff.text_field :email, class: "form-control" %>
    <%= show_errors ff.object, :email %>
  </div>
  <div class="form-group">
    <%= ff.label :company, '会社' %>
    <%= ff.text_field :company, class: "form-control" %>
    <%= show_errors ff.object, :company %>
  </div>
  <div class="form-group">
    <%= ff.label :phone_number, '電話番号' %>
    <%= ff.text_field :phone_number, class: "form-control" %>
    <%= show_errors ff.object, :phone_number %>
  </div>
  <div class="form-group">
    <%= ff.label :password, 'パスワード' %>
    <%= ff.text_field :password, class: "form-control" %>
    <%= show_errors ff.object, :password %>
  </div>

  <div class="form-group">
    <%= ff.label :role, 'タイプ' %>
    <%= ff.select :role, options_from_collection_for_select([['owner', role_as_text('owner')]], :first, :second, selected: ff.object.try(:role)), {}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= ff.label :expire_at, '有効期限' %>
    <div class='input-group date datetimepicker'>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
      <%= ff.text_field :expire_at, class: "form-control" %>
    </div>
  </div>
<% end %>
