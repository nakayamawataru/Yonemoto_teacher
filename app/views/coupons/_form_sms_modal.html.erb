<div class="modal fade" id="modalSmsForm" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">SMS送信対象</h4>
      </div>
      <div class="modal-body">
        <div class="box-body">
          <form id="formSmsReview">
            <div class="form-group">
              <label for="coupon_limit_num">氏名</label>
              <input class="form-control sms-review-username" type="text" name="sms_review[username]">
            </div>
            <div class="form-group">
              <label for="coupon_limit_num">電話番号</label>
              <input class="form-control sms-review-phone-number" type="text" name="sms_review[phone_number]">
            </div>
            <input value="<%= @coupon.business_id %>" type="hidden" name="sms_review[business_id]">
            <input class="sms-review-id" type="hidden" name="sms_review[sms_review_id]">
            <div class="pull-right">
              <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
              <button type="button" class="btn btn-success btn-save-sms-review">保存</button>
              <button type="button" class="btn btn-success btn-update-sms-review">保存</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
