<%= render 'content_header' %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">クーポン詳細</h3>
          <%= link_to "クーポン一覧", coupons_path(business_id: @coupon.business_id), class:  "btn btn-success pull-right" %>
        </div>
        <div class="box-body">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="<%= 'active' if @tab == 'info' %>"><a href="<%= coupon_path(@coupon, tab: 'info') %>">基本情報</a></li>
              <li class="<%= 'active' if @tab == 'sms' %>"><a href="<%= coupon_path(@coupon, tab: 'sms') %>">SMS送信</a></li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane <%= 'active' if @tab == 'info' %>" id="tab_1">
                <%= render 'info_form' %>
              </div>

              <div class="tab-pane <%= 'active' if @tab == 'sms' %>" id="tab_2">
                <%= render 'sms_form' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
