<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">お知らせ一覧</h3>
          <%= link_to new_notification_path, class: "btn btn-success" do %>
            <i class="fa fa-plus"></i>
            <span>登録</span>
          <% end %>
        </div>
        <div class="box-body">
          <div class="table table-responsive">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th class="text-center" style="width:5%">ID</th>
                  <th class="text-center" style="width:30%">本文</th>
                  <th class="text-center" style="width:20%">配信期間</th>
                  <th class="text-center" style="width:15%">ボタンURL</th>
                  <th class="text-center" style="width:15%">表示対象</th>
                  <th class="text-center" style="width:15%">操作</th>
                </tr>
              </thead>

              <tbody class="notification-list">
                <%= render @notifications %>
              </tbody>
            </table>
          </div>
          <br>
          <div id="page-entries-info">
            <%= page_entries_info @notifications, entry_name: '項目' %>
          </div>
          <div id="pagination">
            <%= paginate @notifications %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
