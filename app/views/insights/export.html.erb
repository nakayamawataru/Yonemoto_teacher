<%= content_for :additional_script do %>
  <%= javascript_include_tag 'components/exports_csv' %>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">インサイトデータCSVダウンロード</h3>
        </div>

        <div class="box-body">
          <%= form_tag export_csv_insights_path do %>
            <div class="form-group row">
              <div class="col-md-6 col-xs-12">
                <label class="control-label">年月</label>
                  <%= select_tag :month,
                                  options_from_collection_for_select(
                                    @months, :first,
                                    :second, params[:month]),
                                  class: "form-control month-select2" %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-12 col-xs-12">
                <label>案件名</label>
                <%= select_tag "business_ids[]",
                                options_from_collection_for_select(@businesses,
                                "id", "name"),
                                placeholder: "全ての施設", multiple: true,
                                class: "form-control business-select2" %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-12 col-xs-12">
                <button class="btn btn-info">
                  <i class="fa fa-file-o"></i> CSVファイル出力
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>