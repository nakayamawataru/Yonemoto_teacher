<%= content_for :additional_script do %>
  <%= javascript_include_tag 'components/setting_staff' %>
<% end %>

<section class="content">
  <div class="row">
    <%= render 'shared/setting_sidebar' %>

    <div class="col-md-9 col-sm-9">
      <div class="box">
        <div class="box-header">
          <h4>スタッフ管理</h4>
        </div>
        <div class="box-body">
          <div class="table table-responsive">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th style="width: 10%">ID</th>
                  <th style="width: 35%">名前</th>
                  <th style="width: 35%">画像</th>
                  <th class="text-center">表示/非表示</th>
                </tr>
              </thead>

              <tbody class="staff-list">
                <%= render "staff_item", staffs: @staffs %>
              </tbody>
              <tbody>
                <tr>
                  <%= form_for Staff.new, url: setting_staffs_path, method: :post do |f| %>
                    <td></td>
                    <td><%= f.text_field :staffname, class: 'form-control input-sm' %></td>
                    <td>
                      <div class="small-face-icon" id="preview-img-0"></div>
                      <%= f.file_field :image, class: 'upload-image-staff', onchange: "readURL(this, 0);" %>
                    </td>
                    <td class="text-center"><%= f.submit '新規追加', class: 'btn btn-success btn-sm' %></td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
          <div id="page-entries-info">
            <%= page_entries_info @staffs, entry_name: '項目' %>
          </div>
          <div id="pagination">
            <%= paginate @staffs %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
