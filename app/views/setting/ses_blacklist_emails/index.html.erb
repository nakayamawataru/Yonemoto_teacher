<section class="content">
  <div class="row">
    <%= render 'shared/setting_sidebar' %>

    <div class="col-md-9 col-sm-9">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">バウンスメール一覧</h3>
        </div>
        <div class="box-body">
          <div class="table table-responsive">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th class="text-center">メールアドレス</th>
                  <th class="text-center">追加日時</th>
                  <th class="text-center">操作</th>
                </tr>
              </thead>

              <tbody class="business-list">
                <% @ses_blacklist_emails.each do |ses_blacklist_email| %>
                  <tr class="list-business">
                    <td class="text-center"><%= ses_blacklist_email.email %></td>
                    <td class="text-center"><%= ses_blacklist_email.added_at.strftime('%Y/%m/%d %H:%M') if ses_blacklist_email.added_at %></td>
                    <td class="text-center">
                      <% if can? :destroy, ses_blacklist_email %>
                        <%= link_to setting_ses_blacklist_email_path(ses_blacklist_email), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-success" do %>
                          <i class="fa fa-trash"></i>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
