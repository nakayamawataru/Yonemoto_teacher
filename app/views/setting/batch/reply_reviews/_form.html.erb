<div class="form-group">
  <label><%= title %></label>
  <%= text_area_tag 'content', review.try(:content).to_s, rows: 3, id: "content_#{index}", class: 'form-control' %>
</div>
<div class="form-group">
  <%= check_box_tag 'auto_reply', 1, checked = review.try(:auto_reply), id: "auto_reply_#{index}" %> 自動返信
</div>
<%= hidden_field_tag 'type_review', type_review, { id: "type_review_#{index}" } %>
<div class="form-group">
  <button class="btn btn-success btn-reply-review">保存</button>
</div>
