<%= content_for :additional_script do %>
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js' %>
  <%= javascript_include_tag 'components/chart' %>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <%= form_tag iframe_charts_url, { method: :get, id: 'filter-for-chart' } do %>
          <div class="box-body">
            <div class="search-form row">
              <div class="col-md-12">
                <div class="form-group col-md-3 col-xs-12">
                  <label class="control-label">年月</label>
                  <%= select_tag :month, options_for_select(@month_categories, params[:month]),
                    class: "form-control chart-category" %>
                </div>
                <div class="form-group col-md-9 col-xs-12 select-categories">
                  <label>カテゴリ</label>
                  <%= select_tag :gcid, options_for_select(@select_categories, params[:gcid]),
                    class: "form-control chart-category select-business" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="box">
        <div class="box-body">
          <canvas id="myChartCategory" width="400" height="150"></canvas>
        </div>
      </div>
    </div>
  </div>
</section>
