<div class="form-group">
  <%= f.label :title, 'イベントタイトル' %>
  <%= f.text_field :title, class: "form-control" %>
  <% if params[:error].try(:[], :title).present? %>
    <ul class='tm-validation-errors'>
      <li class='tm-validation-error-message'>イベントタイトル<%= params[:error][:title].first %></li>
    </ul>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :start_date, '開始日時' %>
  <div class='input-group date' id='start_date'>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
    <%= f.text_field :start_date, class: "form-control",
      value: @post.start_date ? @post.start_date.strftime('%d/%m/%Y %H:%M:%S') : Time.zone.now.strftime('%d/%m/%Y %H:%M:%S') %>
  </div>
  <% if params[:error].try(:[], :start_date).present? %>
    <ul class='tm-validation-errors'>
      <li class='tm-validation-error-message'>開始日時<%= params[:error][:start_date].first %></li>
    </ul>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :end_date, '終了日時' %>
  <div class='input-group date' id='end_date'>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
    <%= f.text_field :end_date, class: "form-control",
      value: @post.end_date ? @post.end_date.strftime('%d/%m/%Y %H:%M:%S') : (Time.zone.now + 7.days).strftime('%d/%m/%Y %H:%M:%S') %>
  </div>
  <% if params[:error].try(:[], :end_date).present? %>
    <ul class='tm-validation-errors'>
      <li class='tm-validation-error-message'>終了日時<%= params[:error][:end_date].first %></li>
    </ul>
  <% end %>
</div>
